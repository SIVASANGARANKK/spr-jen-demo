pipeline {
    agent any
    tools{
        jdk 'Java21'
        maven 'Maven'
    }
    stages {
        stage('Checkout Code') {
            steps {
                echo 'Pulling from Github'
				git branch: 'main', credentialsId: 'git.cred', url: 'https://github.com/SIVASANGARANKK/spr-jen-demo.git'
            }
        }
        
        stage('Build Project') {
            steps {
                echo 'Building Java project'
                bat 'mvn clean package -DskipTests'
            }
        }
       
       // stage('Run Application') {
            //steps {
            //    bat 'java -jar target/spr-jen-demo-0.0.1-SNAPSHOT.jar --server.port=0'
          //  }
        //}
    }
    post { 
        success { 
            echo 'Build and Run is SUCCESSFUL!'
        }
        failure{
            echo 'OOPS!!! Failure.'
        }
    }
}